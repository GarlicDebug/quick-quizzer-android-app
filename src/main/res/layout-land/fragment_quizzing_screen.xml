<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272635"
    tools:context=".QuizzingScreenFragment">

    <Button
        android:id="@+id/trueButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/quizzing_true"
        android:textColor="@color/colorNiceWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/falseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/questionBodyTextView" />

    <Button
        android:id="@+id/falseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/colorAccent"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/quizzing_false"
        android:textColor="@color/colorNiceWhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/questionBodyTextView" />

    <TextView
        android:id="@+id/questionBodyTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/playfair_display_bold_italic"
        android:gravity="center"
        android:text="@string/quizzing_question_error"
        android:textColor="@color/colorNiceWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/playfair_display_bold_italic"
        android:text="@string/quizzing_question_header"
        android:textColor="@color/colorNiceWhite"
        app:layout_constraintEnd_toEndOf="@+id/questionBodyTextView"
        app:layout_constraintStart_toStartOf="@+id/questionBodyTextView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>